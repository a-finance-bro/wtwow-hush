{
    "manifest_version": 3,
    "name": "WTWOW HUSH v1.0",
    "version": "1.0",
    "description": "Hiding Unwanted Site Hints - Obfuscate inactive tabs for privacy.",
    "permissions": [
        "tabs",
        "storage",
        "scripting",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "WTWOW HUSH Settings"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}